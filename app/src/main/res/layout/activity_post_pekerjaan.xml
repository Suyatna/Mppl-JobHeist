<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pekerja.PostPekerjaanActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="@drawable/picture"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Judul Posting"
            android:textSize="22sp"
            android:layout_marginLeft="@dimen/large_marge"
            android:textFontWeight="26sp"
            android:layout_marginTop="@dimen/large_marge"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Deskripsi"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/large_marge"
            android:layout_marginTop="@dimen/large_marge"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Alamat"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/large_marge"
            android:layout_marginTop="@dimen/large_marge"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/very_huge_margin"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/colorBlue"
            android:text="Apply"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"/>
        
    </LinearLayout>
</RelativeLayout>