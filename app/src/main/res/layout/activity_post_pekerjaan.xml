<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pekerja.PostPekerjaanActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_foto_post_pekerjaan"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_judul_post_pekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                tools:text="Judul Posting"
                android:textSize="22sp"
                android:layout_marginLeft="@dimen/large_marge"
                android:textFontWeight="26sp"
                android:layout_marginTop="@dimen/large_marge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Deskripsi"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/large_marge"
                android:layout_marginTop="@dimen/large_marge" />

            <TextView
                android:id="@+id/tv_deskripsi_post_pekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_marge"
                android:layout_marginRight="@dimen/large_marge"
                android:layout_marginTop="@dimen/medium_margin"
                tools:text="Ini isi deskripsi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Alamat"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/large_marge"
                android:layout_marginTop="@dimen/large_marge" />

            <TextView
                android:id="@+id/tv_alamat_post_pekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_marge"
                android:layout_marginRight="@dimen/large_marge"
                android:layout_marginTop="@dimen/medium_margin"
                tools:text="Ini isi alamat"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/very_huge_margin"
                android:layout_marginBottom="@dimen/large_marge"
                android:background="@drawable/rounded_shape"
                android:backgroundTint="@color/colorBlue"
                android:text="Apply"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>