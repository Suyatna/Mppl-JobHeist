<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo_login"
                style="@style/ImageView"
                android:layout_width="@dimen/image_logo"
                android:layout_height="@dimen/image_logo"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo" />

            <LinearLayout
                android:id="@+id/line_form_login"
                style="@style/LineContent"
                android:layout_marginTop="@dimen/very_huge_margin"
                android:orientation="vertical"
                android:layout_below="@id/iv_logo_login"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/silakan_mas"
                    android:layout_width="185dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/very_large_margin"
                    android:textSize="13sp"
                    android:text="Silahkan Masukan Email Anda"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/contoh_mama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/large_marge"
                    android:layout_gravity="center"
                    android:text="Contoh : maman@gmail.com"
                    android:gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/et_login_email"
                    style="@style/EditTextForm"
                    android:layout_marginTop="@dimen/very_large_margin"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email"
                    android:importantForAutofill="no"
                    tools:targetApi="o" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/very_huge_margin"
                    android:layout_marginRight="@dimen/very_huge_margin"
                    android:layout_marginTop="@dimen/very_large_margin"
                    android:layout_marginBottom="@dimen/very_large_margin"
                    android:paddingTop="@dimen/medium_margin"
                    android:paddingBottom="@dimen/medium_margin"
                    android:background="@drawable/button_rounded_shape"
                    android:backgroundTint="@android:color/black"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Kirim" />



            </LinearLayout>

            <TextView
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/very_large_margin"
                android:paddingLeft="@dimen/very_large_margin"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/medium_margin"
                android:layout_marginTop="40dp"
                android:layout_below="@id/iv_logo_login"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="Lupa Password"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"
                android:background="@drawable/border"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>