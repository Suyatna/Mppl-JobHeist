<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLayout"
    tools:context=".admin.AdminHomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo_daftar"
                style="@style/ImageView"
                android:layout_width="@dimen/image_logo"
                android:layout_height="@dimen/image_logo"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/logo"
                android:contentDescription="@string/logo" />

            <LinearLayout
                style="@style/LineContent"
                android:layout_marginTop="@dimen/very_large_margin"
                android:orientation="vertical"
                android:layout_below="@id/iv_logo_daftar"
                android:background="@android:color/white">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/very_huge_margin"
                    android:layout_marginBottom="@dimen/very_large_margin">

                    <LinearLayout
                        android:id="@+id/linear_pemberikerja"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/menu_admin_selected"
                        android:layout_margin="@dimen/large_marge"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="@dimen/medium_margin"
                            android:layout_height="wrap_content"
                            android:text="List Daftar Pencari Kerja"
                            android:gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_pencarikerja"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/menu_admin_selected"
                        android:layout_margin="@dimen/large_marge"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/medium_margin"
                            android:text="List Daftar Pemberi Kerja"
                            android:gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_admin_home_riwayat"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/menu_admin_selected"
                        android:layout_margin="@dimen/large_marge"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat Riwayat Pekerjaan"
                            android:gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_verivy_akun"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/menu_admin_selected"
                        android:layout_margin="@dimen/large_marge"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Verify"
                            android:gravity="center"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/very_large_margin"
                android:paddingLeft="@dimen/very_large_margin"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/medium_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_below="@id/iv_logo_daftar"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="@string/admin"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_bright"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>