<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_list_pencari_kerj"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_margin"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_list_item_pencarikerja_foto"
            android:background="@drawable/foto_profile"
            android:layout_width="@dimen/image_medium"
            android:layout_height="@dimen/image_medium" />

        <TextView
            android:id="@+id/tv_list_item_pencarikerja_name"
            style="@style/TextDesc.Value"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/medium_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/medium_text"
            android:text="Nama" />

    </LinearLayout>

</android.support.v7.widget.CardView>